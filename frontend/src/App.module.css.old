.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #0f0f1e 0%, #1a1a2e 50%, #16213e 100%);
  color: #e0e7ff;
  position: relative;
  overflow-x: hidden;
}

.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 20% 50%, rgba(102, 126, 234, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 80% 80%, rgba(118, 75, 162, 0.1) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

.container > * {
  position: relative;
  z-index: 1;
}

.header {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.08) 100%);
  backdrop-filter: blur(20px);
  padding: 3rem 2rem;
  text-align: center;
  border-bottom: 1px solid rgba(102, 126, 234, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
}

.header h1 {
  margin: 0 0 0.5rem 0;
  font-size: 2.8rem;
  font-weight: 800;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -1px;
}

.header p {
  margin: 0;
  color: #a0aec0;
  font-size: 1rem;
  font-weight: 500;
  letter-spacing: 0.5px;
}

.mainWrapper {
  flex: 1;
  display: grid;
  grid-template-columns: 1fr 350px;
  gap: 2rem;
  padding: 2.5rem 2rem;
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
  overflow-y: auto;
}

@media (max-width: 1024px) {
  .mainWrapper {
    grid-template-columns: 1fr;
    max-width: 700px;
  }

  .chatSidebar {
    order: -1;
  }
}

.main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.error {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.1) 0%, rgba(220, 38, 38, 0.05) 100%);
  border-left: 4px solid #ef4444;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fca5a5;
  border: 1px solid rgba(239, 68, 68, 0.3);
  backdrop-filter: blur(10px);
}

.error button {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: #fca5a5;
  padding: 0;
  margin-left: 1rem;
  transition: opacity 0.2s;
}

.error button:hover {
  opacity: 0.8;
}

.resetButton {
  width: 100%;
  padding: 12px 24px;
  font-size: 14px;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  margin-top: 2rem;
  margin-bottom: 1rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.resetButton:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.resetButton:active {
  transform: translateY(-1px);
}

.chatButton {
  width: 100%;
  padding: 12px 24px;
  font-size: 14px;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  margin-top: 1.5rem;
  margin-bottom: 1.5rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.chatButton:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.chatButton:active {
  transform: translateY(-1px);
}

.chatSidebar {
  position: sticky;
  top: 2.5rem;
  height: fit-content;
  max-height: calc(100vh - 300px);
}

.chatPlaceholder {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.05) 100%);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(102, 126, 234, 0.2);
  border-radius: 12px;
  padding: 2rem;
  text-align: center;
  color: #a0aec0;
  min-height: 300px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.chatPlaceholder h2 {
  margin: 0 0 1rem 0;
  color: #e0e7ff;
  font-size: 1.5rem;
  font-weight: 600;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.chatPlaceholder p {
  margin: 0;
  color: #a0aec0;
  font-size: 0.95rem;
  line-height: 1.5;
}

.footer {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.05) 100%);
  backdrop-filter: blur(20px);
  padding: 2rem;
  text-align: center;
  border-top: 1px solid rgba(102, 126, 234, 0.2);
  color: #a0aec0;
  margin-top: auto;
}

.footer p {
  margin: 0;
  font-size: 0.9rem;
  font-weight: 500;
}

@media (max-width: 640px) {
  .header h1 {
    font-size: 1.8rem;
  }

  .header {
    padding: 1rem;
  }

  .main {
    padding: 1rem;
  }
}
